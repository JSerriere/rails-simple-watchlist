<h2><%= @list.name %></h2>


<% @list.movies.each do |movie|%>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
<p><%= movie.original_title %> <%= bookmark.movie.rating %></p>
<div class="">
  <div>
    <%= image_tag bookmark.movie.poster_url, width: 150, height: 200 %>
  </div>
  <div>
    <p><%= bookmark.movie.overview %></p>
  </div>
</div>
 <%= link_to "Delete", bookmark_path(@list, bookmark), data: {"turbo-method": :delete} %>
<% end %>





